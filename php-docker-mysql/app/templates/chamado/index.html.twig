{% extends 'base.html.twig' %}

{% block title %}Chamado index{% endblock %}

{% block body %}
    <h1>Chamado index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>DataAbertura</th>
                <th>DataAtualizacao</th>
                <th>DataConclusao</th>
                <th>Status</th>
                <th>Assunto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chamado in chamados %}
            <tr>
                <td>{{ chamado.id }}</td>
                <td>{{ chamado.dataAbertura ? chamado.dataAbertura|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chamado.dataAtualizacao ? chamado.dataAtualizacao|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chamado.dataConclusao ? chamado.dataConclusao|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chamado.status }}</td>
                <td>{{ chamado.assunto }}</td>
                <td>
                    <a href="{{ path('chamado_show', {'id': chamado.id}) }}">show</a>
                    <a href="{{ path('chamado_edit', {'id': chamado.id}) }}">edit</a>
                    <a href="{{ path('chamado_encerrar', {'id': chamado.id}) }}">encerrar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chamado_new') }}">Create new</a>
{% endblock %}
